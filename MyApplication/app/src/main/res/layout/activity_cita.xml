<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="pe.edu.upc.veterinaryapp.CitaActivity">


    <ImageView
        android:layout_width="139dp"
        android:layout_height="170dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/ic_clinicaveterinaria"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btReservaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="RESERVAR CITA"
        style="@style/Theme.ButtonTheme" />

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">



    <Button
        android:id="@+id/btConsultarCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CONSULTAR CITA"
        style="@style/Theme.ButtonTheme" />
</LinearLayout>




</LinearLayout>